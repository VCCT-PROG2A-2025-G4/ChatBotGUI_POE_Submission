<Page x:Class="ChatBotGUI.Pages.ActivityLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ActivityLogPage"
      Background="#FFFAFAFA"
      MinWidth="600" MinHeight="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Activity Log List -->
        <ListBox x:Name="LogListBox"
                 Grid.Row="0"
                 Background="White"
                 BorderBrush="#007ACC"
                 BorderThickness="1"
                 Padding="5"
                 FontSize="14"
                 Margin="0,0,0,10"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 />

        <!-- Show More / Show Less Button -->
        <Button x:Name="ShowMoreButton"
                Grid.Row="1"
                Content="Show More"
                Width="120"
                Height="32"
                HorizontalAlignment="Center"
                Background="#007ACC"
                Foreground="White"
                FontWeight="Bold"
                BorderBrush="#005999"
                BorderThickness="1"
                Click="ShowMore_Click"
                Margin="0,5,0,0"/>
    </Grid>
</Page>
