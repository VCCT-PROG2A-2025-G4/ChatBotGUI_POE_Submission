<Page x:Class="ChatBotGUI.Pages.ChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ChatPage"
      Background="#FFFAFAFA"
      MinWidth="600" MinHeight="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Chat display area -->
        <ListBox x:Name="ChatListBox"
                 Grid.Row="0"
                 Background="White"
                 BorderBrush="Gray"
                 BorderThickness="1"
                 Padding="5"
                 FontSize="14"
                 Margin="0,0,0,10" />

        <!-- Input area -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch" Height="40">

            <TextBox x:Name="UserInputTextBox"
                     Width="600"
                     VerticalAlignment="Center"
                     FontSize="14"
                     Margin="0,0,10,0"
                     Height="30"
                     AcceptsReturn="False"
                     KeyDown="UserInputTextBox_KeyDown" />

            <Button Content="Send"
                    Width="100"
                    Height="30"
                    VerticalAlignment="Center"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="#005999"
                    BorderThickness="1"
                    Click="SendButton_Click"/>

            <!-- Clear Chat Button Added Here -->
            <Button Content="Clear Chat"
                    Width="100"
                    Height="30"
                    VerticalAlignment="Center"
                    Margin="10,0,0,0"
                    Background="#FF555555"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="#FF333333"
                    BorderThickness="1"
                    Click="ClearChatButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
